{
  "name": "@garbados/html-alchemist",
  "version": "1.0.0",
  "description": "Reagent-style HTML templating.",
  "type": "module",
  "main": "index.js",
  "files": [
    "constants.js",
    "index.js",
    "README.md"
  ],
  "scripts": {
    "precommit": "standard --fix",
    "commit": "git add -p && git commit",
    "test": "standard && mocha",
    "build": "rollup -i playground.js -o www/web.js",
    "release": "npm run build && uglifyjs www/web.js -o www/web.min.js -c -m --toplevel",
    "watch": "sane \"npm run build\" . --glob={constants,playground,index}.js",
    "serve": "serve www",
    "dev": "run-p watch serve",
    "coverage": "c8 npm test",
    "lcov": "c8 --reporter=\"lcovonly\" npm test"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/garbados/html-alchemist.git"
  },
  "keywords": [
    "html",
    "webcomponents"
  ],
  "author": "Diana Belle <garbados@gmail.com>",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/garbados/html-alchemist/issues"
  },
  "homepage": "https://github.com/garbados/html-alchemist#readme",
  "devDependencies": {
    "c8": "^10.1.3",
    "fast-check": "^3.23.2",
    "html-validate": "^9.1.1",
    "mocha": "^11.0.1",
    "npm-run-all2": "^7.0.2",
    "rollup": "^4.30.0",
    "sane": "^5.0.1",
    "serve": "^14.2.4",
    "standard": "^17.1.2",
    "uglify-js": "^3.19.3"
  }
}
